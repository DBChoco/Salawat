<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300" prefWidth="1280" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.github.dbchoco.Salawat.controllers.main.TimeController">
   <GridPane fx:id="grid" nodeOrientation="LEFT_TO_RIGHT" prefHeight="300.0" prefWidth="1280.0">
     <columnConstraints>
       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
     </columnConstraints>
     <rowConstraints>
       <RowConstraints vgrow="SOMETIMES" />
       <RowConstraints vgrow="SOMETIMES" />
       <RowConstraints vgrow="SOMETIMES" />
     </rowConstraints>
      <children>
         <FlowPane alignment="BOTTOM_CENTER" prefHeight="135.0" prefWidth="1280.0" rowValignment="BOTTOM">
            <children>
                <Label id="clock" fx:id="clock" alignment="CENTER" contentDisplay="CENTER" prefHeight="86.0" styleClass="title" text="00:00:00">
                  <font>
                     <Font name="MFXResources" size="83.0" />
                  </font>
                  <FlowPane.margin>
                     <Insets bottom="10.0" />
                  </FlowPane.margin></Label>
            </children>
         </FlowPane>
         <FlowPane alignment="TOP_CENTER" prefHeight="24.0" prefWidth="1280.0" GridPane.rowIndex="1">
            <children>
                <Label id="date" fx:id="date" alignment="TOP_CENTER" prefHeight="32.0" styleClass="title" text="00/00/0000">
                  <font>
                     <Font name="MFXResources" size="31.0" />
                  </font></Label>
            </children>
         </FlowPane>
         <FlowPane alignment="CENTER" prefHeight="84.0" prefWidth="401.0" GridPane.rowIndex="2">
            <children>
                <Label id="timeLeft" fx:id="timeLeft" alignment="CENTER" prefHeight="33.0" text="Time before X: XX:XX:XX">
                  <font>
                     <Font name="MFXResources" size="32.0" />
                  </font></Label>
            </children>
         </FlowPane>
      </children>
   </GridPane>
</AnchorPane>
